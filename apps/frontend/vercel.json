{
  "version": 2,
  "framework": "nextjs",
  "buildCommand": "cd ../.. && pnpm install && cd apps/frontend && pnpm run prod:build",
  "outputDirectory": "out",
  "installCommand": "pnpm install",
  "env": {
    "ENV": "prod"
  },
  "build": {
    "env": {
      "ENV": "prod"
    }
  },
  "routes": [
    {
      "src": "/robots.txt",
      "dest": "/robots.txt"
    },
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ]
}
